<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    android:background="@drawable/bgcal" >

<AbsoluteLayout
    android:layout_width="fill_parent"
    android:layout_height="560dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="-2dp"
        android:layout_y="47dp"
        android:gravity="left" >
    </LinearLayout>

    <CalendarView
        android:id="@+id/calendarView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_x="0dp"
        android:layout_y="1dp"
        android:background="@drawable/bg_2cal" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="152dp"
        android:src="@drawable/linecal" />

    <Button
        android:id="@+id/btnstick"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_x="270dp"
        android:layout_y="163dp"
        android:background="@drawable/sticker_1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_x="26dp"
        android:layout_y="194dp"
        android:src="@drawable/linecal" />

    <TextView
        android:id="@+id/info"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_x="125dp"
        android:layout_y="238dp"
        android:drawableBottom="@drawable/detalle_sq_big"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/hora1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="37dp"
        android:layout_y="206dp"
        android:background="@drawable/detalle_sq"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/hora2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="40dp"
        android:layout_y="290dp"
        android:background="@drawable/detalle_sq"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_x="241dp"
        android:layout_y="286dp"
        android:background="@drawable/detalle_btn_1" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_x="268dp"
        android:layout_y="286dp"
        android:background="@drawable/detalle_btn_2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="348dp"
        android:src="@drawable/linecal" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_x="139dp"
        android:layout_y="366dp"
        android:background="@drawable/add" />

</AbsoluteLayout>

</ScrollView>